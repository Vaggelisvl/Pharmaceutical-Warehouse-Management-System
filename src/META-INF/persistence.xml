<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PharmacyPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>pharmacy.Orderitems</class>
    <class>pharmacy.Customer</class>
    <class>pharmacy.Dragorder</class>
    <class>pharmacy.Producer</class>
    <class>pharmacy.Systemuser</class>
    <class>pharmacy.Department</class>
    <class>pharmacy.Dragtype</class>
    <class>pharmacy.City</class>
    <class>pharmacy.Drag</class>
    <class>pharmacy.Dragpart</class>
    <class>pharmacy.Payments</class>
    <class>pharmacy.Supplier</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pharmacyware?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
